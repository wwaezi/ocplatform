{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
    {{ 'oc.advert.delete.balisetitle'|trans }} - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

    <h2>{{ 'oc.advert.delete.h2title'|trans }}</h2>

    <p>
        {{ 'oc.advert.delete.areyousure'|trans({'%title%': advert.title}) }}
    </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('oc_platform_delete', {'id': advert.id}) }}" method="post">

        <a href="{{ path('oc_platform_view', {'id': advert.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            {{ 'oc.advert.delete.button.backtoadvert'|trans }}
        </a>

        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="{{ 'oc.advert.delete.button.delete'|trans }}" class="btn btn-danger" />

        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}

    </form>

{% endblock %}